<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/mine_fragment">

    <fragment
        android:id="@+id/mine_fragment"
        android:name="ru.otus.wishlist.fragment.mine.MineFragment"
        tools:layout="@layout/fragment_mine">
        <action
            android:id="@+id/go_to_users"
            app:destination="@+id/users_fragment"/>
        <action
            android:id="@+id/go_to_profile"
            app:destination="@+id/profile_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/users_fragment"
        android:name="ru.otus.wishlist.fragment.users.UsersFragment"
        tools:layout="@layout/fragment_users">
        <action
            android:id="@+id/go_to_mine"
            app:destination="@+id/mine_fragment"/>
        <action
            android:id="@+id/go_to_profile"
            app:destination="@+id/profile_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/profile_fragment"
        android:name="ru.otus.wishlist.fragment.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/go_to_mine"
            app:destination="@+id/mine_fragment"/>
        <action
            android:id="@+id/go_to_users"
            app:destination="@+id/users_fragment"/>
    </fragment>

</navigation>